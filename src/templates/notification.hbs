                                            {{#each details}}
                                            <div style="margin-bottom: 10px;">
                                                <div style="display: flex; flex-direction: column;">
                                                    <span style="font-weight: 600; color: #1e40af; font-size: 14px; margin-bottom: 2px;">{{@key}}:</span>
                                                    <span style="color: #3730a3; font-size: 14px;">{{this}}</span>
                                                </div>
                                            </div>
                                            {{/each}}
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {{/if}}

                            {{#if actionUrl}}
                            <!-- Action Button Section -->
