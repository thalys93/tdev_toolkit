                            </div>

                            {{#if details}}
                            <!-- Details Section -->
                            <div style="background-color: #eff6ff; border: 2px solid #3b82f6; border-radius: 8px; padding: 25px; margin-bottom: 30px;">
                                <div style="display: flex; align-items: flex-start;">
                                    <div style="width: 40px; height: 40px; background-color: #3b82f6; border-radius: 50%; margin-right: 15px; display: flex; align-items: center; justify-content: center; flex-shrink: 0;">
